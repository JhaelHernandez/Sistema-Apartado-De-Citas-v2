@model Datos.Usuario
    <form class="form-horizontal col-md-6 col-md-offset-3">
    <fieldset>
    <legend>Add+User</legend>
    <div class="form-group">
        <label class="control-label" for="focusedInput">No. Control</label>
        @Html.TextBoxFor(m=>m.NoControl, new {@class="form-control",@placeholder="Inserte No. de control"})
    </div>
    <div class="form-group">
        <label class="control-label" for="focusedInput">Nombre</label>
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Escriba el nombre del alumno" })
    </div>
    <div class="form-group">
        <label class="control-label" for="focusedInput">Apellidos</label>
        @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @placeholder = "Escriba el apellido del alumno" })
    </div>
    <div class="form-group">
        <label for="inputPassword" class="control-label">Contraseña</label>
        @Html.TextBoxFor(m => m.Contraseña, new { @class = "form-control", @placeholder = "Escriba la contraseña" })        
    </div>
    <div class="form-group">
        <label for="select" class="control-label">Seleccione materias</label>
        
            <select class="form-control" id="select">
                <option>Ing. Biomédica</option>
                <option>Ing. Eléctrica</option>
                <option>Ing. Electrónica</option>
                <option>Ing. en Gestión Empresarial</option>
                <option>Ing. Industrial</option>
                <option>Ing. en Informática</option>
                <option>Ing. Mecánica</option>
                <option>Ing. Mecatrónica</option>
                <option>Ing. en Sistemas Computacionales</option>
                <option>Lic. en Administración</option>
            </select>
    </div>
    <div class="form-group">
        <label class="control-label">Usuario</label>
            <div class="radio">
                <label>
                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                    Coordinador
                </label>
                <label>
                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2" checked="">
                    Maestro
                </label>
                <label>
                    <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3" checked="">
                    Alumno
                </label>
            </div>
        </div>
    <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <button style="float:right" type="reset" class="btn btn-default">Cancelar</button>
        </div>
    </fieldset>
    </form>